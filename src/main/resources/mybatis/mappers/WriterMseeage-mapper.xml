<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.WriterMseeageDao">

	<!-- 新增 WriterMseeage -->
    <insert id="addWriterMseeage"  parameterType="WriterMseeage"  useGeneratedKeys="true" keyProperty="id"  >
    	insert  into  writer_message (msg_code,msg_type)  values(#{msgCode},#{msgType}) ;
    </insert>
    
   <!-- 根据id删除一个 WriterMseeage -->
	<delete id="deleteWriterMseeageById" parameterType="WriterMseeage"   >
		delete from  writer_message where where id=#{id} ;
	</delete>
	
	<!-- 更新 WriterMseeage -->
	<update id="updateWriterMseeageById"   parameterType="WriterMseeage"  >
		update writer_message  set  msg_code=#{msgCode},msg_type=#{msgType}   where id=#{id} ;
	</update>
	
	<!-- 根据id查询一个 WriterMseeage -->
	<select  id="getWriterMseeageById" parameterType="WriterMseeage"  resultType="WriterMseeage" >
		select * from writer_message where id=#{id} ;
	</select>
	
</mapper>
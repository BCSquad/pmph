<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.WriterMessageDao">

	<sql id="key">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="msgCode != null and msgCode !=''">
				msg_code,
			</if>
			<if test="msgType != null and msgType !=''">
				msg_type,
			</if>
		</trim>
	</sql>
	<!-- sql片段对应?,id属性值任意 -->
	<sql id="value">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="msgCode != null and msgCode !=''">
				#{msgCode},
			</if>
			<if test="msgType != null and msgType !=''">
				#{msgType},
			</if>
		</trim>
	</sql>

	<!-- 新增 WriterMessage -->
	<insert id="addWriterMessage" parameterType="WriterMessage"
		useGeneratedKeys="true" keyProperty="id">
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="id"> <!-- order="AFTER"表示先执行插入语句，之后再执行查询语句 BEFORE 或 AFTER -->
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into writer_message
		(
		<include refid="key" />
		)
		values(
		<include refid="value" />
		) ;
	</insert>

	<!-- 根据id删除一个 WriterMessage -->
	<delete id="deleteWriterMessageById" parameterType="WriterMessage">
		delete from
		writer_message where id=#{id} ;
	</delete>

	<!-- 更新 WriterMessage -->
	<update id="updateWriterMessageById" parameterType="WriterMessage">
		update
		writer_message
		<set>
			<if test="msgCode != null and msgCode !=''">
				msg_code = #{msgCode},
			</if>
			<if test="msgType != null and msgType !='' ">
				msg_type = #{msgType},
			</if>
		</set>
		where
		id=#{id} ;
	</update>

	<!-- 根据id查询一个 WriterMessage -->
	<select id="getWriterMessageById" parameterType="WriterMessage"
		resultType="WriterMessage">
		select * from writer_message where id=#{id}
		;
	</select>

</mapper>
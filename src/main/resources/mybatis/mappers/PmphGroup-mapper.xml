<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.PmphGroupDao">

	<!-- 新增 PmphGroup -->
    <insert id="addPmphGroup"  parameterType="PmphGroup"   >
    	<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id"> <!-- order="AFTER"表示先执行插入语句，之后再执行查询语句  BEFORE 或 AFTER -->
          SELECT LAST_INSERT_ID() 
        </selectKey>
    	insert  into  pmph_group (group_name,group_image,founder_id,book_id,note) 
                     	values(#{groupName,jdbcType=VARCHAR},#{groupImage,jdbcType=VARCHAR},
                     	#{founderId,jdbcType=BIGINT},#{bookId,jdbcType=BIGINT},#{note,jdbcType=BIGINT}) ;
    </insert>
    
   <!-- 根据id删除一个 PmphGroup -->
	<delete id="deletePmphGroupById" parameterType="java.lang.Long"   >
		delete from  pmph_group  where id=#{id} ;
	</delete>
	
	<!-- 更新 PmphGroup -->
	<update id="updatePmphGroup"   parameterType="PmphGroup"  >
		update pmph_group  
		  set   group_name=#{groupName},group_image=#{groupImage},founder_id=#{founderId},book_id=#{bookId},note= #{note}
	     where id=#{id} ;
	</update>
	
	<!-- 根据id查询一个 PmphGroup -->
	<select  id="getPmphGroupById" parameterType="java.lang.Long"  resultType="PmphGroup" >
		select * from pmph_group where id=#{id} ;
	</select>
	
</mapper>
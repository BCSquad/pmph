<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.bc.pmpheep.back.dao.WriterPermissionDao">
	<sql id="key">
        <!-- 去掉最后一个, -->
        <trim suffixOverrides=",">
            <if test="parentId!=null">
                parent_id,
            </if>
            <if test="path!=null">
                path,
            </if>
            <if test="peermissionName!=null">
                permission_name,
            </if>
             <if test="menuName!=null">
                menu_name,
            </if>
             <if test="url!=null">
                url,
            </if>
             <if test="isDeleted!=null">
                is_disabled,
            </if>
             <if test="note!=null">
                note,
            </if>
             <if test="sort!=null">
                sort,
            </if>
             <if test="gmtCreate!=null">
                gmt_create,
            </if> 
            <if test="gmtUpdate!=null">
                gmt_update,
            </if>
        </trim>
    </sql>
    <!-- sql片段对应?,id属性值任意 -->
    <sql id="value">
        <!-- 去掉最后一个, -->
        <trim suffixOverrides=",">
            <if test="parentId!=null">
                #{parentId},
            </if>
            <if test="path!=null">
               #{path},
            </if>
            <if test="peermissionName!=null">
               #{peermissionName},
            </if>
             <if test="menuName!=null">
                #{menuName},
            </if>
             <if test="url!=null">
                #{url},
            </if>
             <if test="isDeleted!=null">
              #{isDeleted},
            </if>
             <if test="note!=null">
                #{note},
            </if>
             <if test="sort!=null">
                #{sort},
            </if>
             <if test="gmtCreate!=null">
               #{gmtCreate},
            </if> 
            <if test="gmtUpdate!=null">
                #{gmtUpdate},
            </if>
        </trim>
    </sql>
	<!-- 添加一个作家权限 -->
	<insert id="addWriterPermission" parameterType="WriterPermission">
		insert into writer_permission
			(<include refid="key"/>)
        VALUES
        	(<include refid="value"/>);
	</insert>

	<!-- 删除一个或者多个作家权限 -->
	<delete id="deleteWriterPermissionById" parameterType="String">
		delete from writer_permission where id in
		<foreach collection="array" open="(" separator="," close=")"
			item="id">#{id}
		</foreach>
	</delete>

	<!-- 修改作家权限 -->
	<update id="updateWriterPermissionById" parameterType="WriterPermission">
		update
		writer_permission set
		permission_name=#{permissionName},is_disabled=#{isDisabled},note=#{note},sort=#{sort}
		where id=#{id};
	</update>

	<!-- 根据权限名称查询 -->
	<select id="getWriterPermissionByPermissionName" parameterType="String">
		select * from writer_permission where permission_name =
		#{permissionName};
	</select>
	
	<select id="getListResource" resultType="WriterPermission">
        SELECT
             `id`,
            `parent_id`,
            `path`,
            `permission_name`,
            `menu_name`,
            `url`
        FROM
          `writer_permission`
    </select>
    
    <delete id="delete" parameterType="int">
        DELETE FROM writer_permission
        WHERE id = #{id}
    </delete>

    <select id="get" parameterType="int" resultType="WriterPermission">
        SELECT
            `id`,
            `parent_id`,
            `path`,
            `permission_name`,
            `menu_name`,
            `url`
        FROM
          `writer_permission`
        WHERE id = #{id}
    </select>
    
</mapper>
	<select id="getListRoleSnByUser" parameterType="Long"
		resultType="String">
		SELECT
		tr.role_name
		FROM
		`writer_role` tr
		LEFT JOIN
		`writer_user_role` tur ON tr.`id` = tur.role_id
		LEFT JOIN `writer_user`
		tu ON
		tur.`user_id` = tu.id
		WHERE tu.`id` = #{uid}
	</select>


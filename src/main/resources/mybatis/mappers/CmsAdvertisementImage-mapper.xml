<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.CmsAdvertisementImageDao">
	<sql id="key">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="advertId != null">
				advert_id,
			</if>
			<if test="image != null and image !=''">
				image,
			</if>
			<if test="isDisabled != null">
				is_disabled,
			</if>
			<if test="gmtCreate!=null">
				gmt_create,
			</if>
			<if test="gmtUpdate!=null">
				gmt_update,
			</if>
		</trim>
	</sql>
	<!-- sql片段对应?,id属性值任意 -->
	<sql id="value">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="advertId != null" >
				#{advertId},
			</if>
			<if test="image != null and image !=''">
				#{image},
			</if>
			<if test="isDisabled != null">
				#{isDisabled},
			</if>
			<if test="gmtCreate!=null">
				#{gmtCreate},
			</if>
			<if test="gmtUpdate!=null">
				#{gmtUpdate}
			</if>
		</trim>
	</sql>
	
	<!-- 新增CmsAdvertisement -->
	<insert id="addCmsAdvertisementImage" parameterType="CmsAdvertisementImage">
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="id"> <!-- order="AFTER"表示先执行插入语句，之后再执行查询语句 BEFORE 或 AFTER -->
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into cms_advertisement_image (
		<include refid="key" />
		)
		values(
		<include refid="value" />
		) ;
	</insert>
	<!-- 通过广告id修改图片 -->
	<update id="updateCmsAdvertisementImage" parameterType="Long">
		update cms_advertisement_image 
			<set>
				<if test="image != null and image!=''">
					image=#{image},
				</if>
				<if test="isDisabled != null">
					is_disabled=#{isDisabled}
				</if>
			</set>
		where advert_id=#{advertId}
	</update>
	<!-- 根据id删除广告-->
	<delete id="deleteCmsAdvertisementByImage" parameterType="Long">
		delete from cms_advertisement_image where advert_id=#{advertId};
	</delete>
	
	<!-- 根据图片id删除图片-->
	<delete id="deleteCmsAdvertisementByImages">
		delete from cms_advertisement_image 
		where image in
		<foreach collection="array" item="item" index="index" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>

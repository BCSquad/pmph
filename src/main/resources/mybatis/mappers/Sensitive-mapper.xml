<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.SensitiveDao">
	<sql id="key">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="word != null and word !=''">
				word,
			</if>
			<if test=" sort != null ">
				sort,
			</if>
			<if test="note != null and note !=''">
				note,
			</if>
			<if test="isDisabled != null">
				is_disabled,
			</if>
			<if test="isDeleted != null">
				is_deleted,
			</if>
			<if test="gmtCreate != null">
				gmt_create,
			</if>
			<if test="gmtUpdate != null">
				gmt_update,
			</if>
		</trim>
	</sql>
	<!-- sql片段对应?,id属性值任意 -->
	<sql id="value">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="word != null and word !=''">
				#{word},
			</if>
			<if test=" sort != null">
				#{sort},
			</if>
			<if test="note != null and note !=''">
				#{note},
			</if>
			<if test="isDisabled != null">
				#{isDisabled},
			</if>
			<if test="isDeleted != null">
				#{isDeleted},
			</if>
			<if test="gmtCreate != null">
				#{gmtCreate},
			</if>
			<if test="gmtUpdate != null">
				#{gmtUpdate},
			</if>
		</trim>
	</sql>
	<!-- 新增Sensitive -->
	<insert id="add" parameterType="Sensitive">
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="id"> <!-- order="AFTER"表示先执行插入语句，之后再执行查询语句 BEFORE 或 AFTER -->
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into `sensitive` (
		<include refid="key" />
		)
		values(
		<include refid="value" />
		) ;
	</insert>

	<!-- 更新Sensitive -->
	<update id="update" parameterType="Sensitive">
		update `sensitive`
		<set>
			<if test="word != null and word !=''">
				word=#{word},
			</if>
			<if test=" sort != null">
				sort=#{sort},
			</if>
			<if test="note != null and note !=''">
				note=#{note},
			</if>
			<if test="isDisabled != null">
				is_disabled=#{isDisabled},
			</if>
			<if test="isDeleted != null">
				is_deleted=#{isDeleted},
			</if>
			<if test="gmtCreate != null">
				gmt_create=#{gmtCreate},
			</if>
			<if test="gmtUpdate != null">
				gmt_update=#{gmtUpdate},
			</if>
		</set>
		where
		id=#{id} ;
	</update>

	<select id="getTotal" parameterType="java.lang.String"
		resultType="java.lang.Integer">
		SELECT
		COUNT(*)
		FROM
		`sensitive` s
		WHERE
		s.is_deleted = FALSE
		<if test="word != null and word != ''">
			AND s.word LIKE CONCAT('%',#{word},'%')
		</if>
	</select>

	<select id="list" resultType="Sensitive">
		SELECT
		*
		FROM
		`sensitive` s
		WHERE
		1=1
		<if test="word != null and word != ''">
			AND s.word LIKE CONCAT('%',#{word},'%')
		</if>
		ORDER BY s.sort
		LIMIT #{start},#{pageSize}
	</select>

	<delete id="deletedIsDeleted">
		DELETE
		FROM
		`sensitive`
		WHERE
		id IN
		<foreach collection="array" open="(" separator="," close=")"
			index="index" item="id">
			#{id}
		</foreach>
	</delete>

	<delete id="delete" parameterType="java.lang.Long">
		DELETE
		FROM
		`sensitive`
		WHERE
		id =
		#{id}
	</delete>
	<select id="getSensitiveId" parameterType="java.lang.String"
		resultType="Sensitive">
		SELECT
		*
		FROM
		`sensitive` s
		WHERE
		s.word = #{word}
	</select>
</mapper>
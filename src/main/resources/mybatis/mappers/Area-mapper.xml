<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.AreaDao">
	<sql id="key">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="parentId != null and parentId !=''">
				parent_id,
			</if>
			<if test="areaName != null and areaName !=''">
				area_name,
			</if>
			<if test=" sort != null and sort !=''">
				sort,
			</if>
		</trim>
	</sql>
	<!-- sql片段对应?,id属性值任意 -->
	<sql id="value">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="parentId != null and parentId !=''">
				#{parentId},
			</if>
			<if test="areaName != null and areaName !=''">
				#{areaName},
			</if>
			<if test=" sort != null and sort !=''">
				#{sort},
			</if>
		</trim>
	</sql>
	<!-- 新增Area -->
	<insert id="addArea" parameterType="Area">
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="id"> <!-- order="AFTER"表示先执行插入语句，之后再执行查询语句 BEFORE 或 AFTER -->
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into area (
		<include refid="key" />
		)
		values(
		<include refid="value" />
		) ;
	</insert>


	<!-- 根据id删除一个 -->
	<delete id="deleteAreaById" parameterType="java.lang.Long">
		delete from area where
		id=#{id} ;
	</delete>

	<!-- 更新Area -->
	<update id="updateArea" parameterType="Area">
		update area
		<set>
			<if test="parentId != null and parentId !=''">
				parent_id = #{parentId},
			</if>
			<if test="areaName != null and areaName !='' ">
				area_name = #{areaName},
			</if>
			<if test=" sort != null and sort !=''">
				sort= #{sort},
			</if>
		</set>
		where
		id=#{id} ;
	</update>

	<!-- 根据id查询一个Area -->
	<select id="getAreaById" parameterType="java.lang.Long"
		resultType="Area">
		select * from area where id=#{id} ;
	</select>
<!-- 分页测试 -->
	<select id="getTestTotal" parameterType="Page" resultType="java.lang.Integer" >  
	    select count(*) from area where true
	     <if test="parameter.sort !=null ">  
	        and sort = #{parameter.sort}
	     </if>  
    </select> 
	<select id="getTest" parameterType="Page" resultType="Area" >  
	    select * from area where true 
	     <if test="parameter.sort !=null ">  
	        and sort = #{parameter.sort}
	    </if>  
	    <if test="start !=null and pageNumber != null">  
	        limit #{start},#{pageSize}  
	    </if>  
    </select> 
    <delete id="deleteAllArea">
    delete from area where 1=1;
    </delete>

</mapper>
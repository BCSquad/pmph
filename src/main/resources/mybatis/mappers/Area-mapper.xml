<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.AreaDao">

	<!-- 新增Area -->
	<insert id="addArea" parameterType="Area">
		insert into area (parent_id,area_name,sort)
		values(#{prentId},#{areaName},#{sort}) ;
	</insert>


	<!-- 根据id删除一个 -->
	<delete id="deleteAreaById" parameterType="Area">
		delete from
		area where where id=#{id} ;
	</delete>

	<!-- 更新Area -->
	<update id="updateAreaById" parameterType="Area">
		update area set
		parent_id=#{prentId},area_name=#{areaName}, sort =#{sort}
		where id=#{id} ;
	</update>

	<!-- 根据id查询一个Area -->
	<select id="getAreaById" parameterType="Area" resultType="Area">
		select * from area where id=#{id} ;
	</select>

</mapper>
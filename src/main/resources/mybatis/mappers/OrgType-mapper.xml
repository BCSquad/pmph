<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.OrgTypeDao">

	<!-- 新增OrgType -->
    <insert id="addOrgType"  parameterType="OrgType"   >
    	<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id"> <!-- order="AFTER"表示先执行插入语句，之后再执行查询语句  BEFORE 或 AFTER -->
          SELECT LAST_INSERT_ID() 
        </selectKey>
    	insert  into  org_type (type_name,sort) 
                     values(#{typeName,jdbcType=VARCHAR},#{sort,jdbcType=INTEGER}) ;
    </insert>
    
   <!-- 根据id删除一个 -->
	<delete id="deleteOrgTypeById" parameterType="java.lang.Long"   >
		delete from org_type where id=#{id} ;
	</delete>
	
	<!-- 更新OrgType -->
	<update id="updateOrgType"   parameterType="OrgType"  >
		update org_type  set  type_name=#{typeName}, sort =#{sort} where id=#{id} ;
	</update>
	
	<!-- 根据id查询一个OrgType -->
	<select  id="getOrgTypeById" parameterType="java.lang.Long"  resultType="OrgType" >
		select * from org_type where id=#{id} ;
	</select>
	
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.orgtype.OrgTypeDao">

	<!-- 新增OrgType -->
    <insert id="addOrgType"  parameterType="OrgType"   >
    	insert  into  org_type (type_name,sort) 
                     values(#{typeName},#{sort}) ;
    </insert>
    
   <!-- 根据id删除一个 -->
	<delete id="deleteOrgTypeById" parameterType="OrgType"   >
		delete from org_type where where id=#{id} ;
	</delete>
	
	<!-- 更新OrgType -->
	<update id="updateOrgTypeById"   parameterType="OrgType"  >
		update org_type  set  type_name=#{typeName}, sort =#{sort} where id=#{id} ;
	</update>
	
	<!-- 根据id查询一个OrgType -->
	<select  id="getOrgTypeDaoById" parameterType="OrgType"  resultType="OrgType" >
		select * from org_type where id=#{id} ;
	</select>
	
</mapper>
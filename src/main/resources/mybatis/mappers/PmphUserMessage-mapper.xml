<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.PmphUserMessageDao">

	<sql id="key">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="msgId != null">
				msg_id,
			</if>
			<if test="userId != null">
				user_id,
			</if>
			<if test=" isRead != null ">
				is_read,
			</if>
			<if test=" isDeleted != null ">
				is_deleted,
			</if>
		</trim>
	</sql>
	<!-- sql片段对应?,id属性值任意 -->
	<sql id="value">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="msgId != null">
				#{msgId},
			</if>
			<if test="userId != null">
				#{userId},
			</if>
			<if test=" isRead != null ">
				#{isRead},
			</if>
			<if test=" isDeleted != null ">
				#{isDeleted},
			</if>
		</trim>
	</sql>

	<!-- 新增 PmphUserMessage -->
	<insert id="addPmphUserMessage" parameterType="PmphUserMessage" >
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="id"> <!-- order="AFTER"表示先执行插入语句，之后再执行查询语句 BEFORE 或 AFTER -->
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into pmph_user_message
		(
		<include refid="key" />
		)
		values(
		<include refid="value" />
		) ;
	</insert>

	<!-- 根据id删除一个 PmphUserMessage -->
	<delete id="deletePmphUserMessageById" parameterType="java.lang.Long">
		delete from pmph_user_message where id=#{id} ;
	</delete>

	<!-- 更新 PmphUserMessage -->
	<update id="updatePmphUserMessage" parameterType="PmphUserMessage">
		update pmph_user_message
		<set>
			<if test="msgId != null">
				msg_id = #{msgId},
			</if>
			<if test="userId != null ">
				user_id = #{userId},
			</if>
			<if test=" isRead != null ">
				is_read= #{isRead},
			</if>
			<if test=" isDeleted != null ">
				is_deleted= #{isDeleted},
			</if>
		</set>
		where id=#{id} ;
	</update>

	<!-- 根据id查询一个 PmphUserMessage -->
	<select id="getPmphUserMessageById" parameterType="java.lang.Long"  resultType="PmphUserMessage">
		select * from pmph_user_message where
		id=#{id} ;
	</select>
	
	<!-- 查询表单的数据总数 -->
	<select id="getPmphUserMessageCount" resultType="Long">
		select count(*)
		from
		pmph_user_message
	</select>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.PmphUserMessageDao">

	<!-- 新增 PmphUserMessage -->
    <insert id="addPmphUserMessage"  parameterType="PmphUserMessage"  useGeneratedKeys="true" keyProperty="id"  >
     	insert  into  pmph_user_message   (msg_id,user_id,is_read,   is_deleted) 
        							values(#{msgId},#{userId},#{isRead},#{isDeleted}) ;
    </insert>
    
   <!-- 根据id删除一个 PmphUserMessage -->
	<delete id="deletePmphUserMessageById" parameterType="PmphUserMessage"   >
		delete from  pmph_user_message where where id=#{id} ;
	</delete>
	
	<!-- 更新 PmphUserMessage -->
	<update id="updatePmphUserMessageById"   parameterType="PmphUserMessage"  >
		update pmph_user_message  
		  set  msg_id=#{msgId},user_id=#{userId},is_read=#{isRead},   is_deleted=#{isDeleted} 
		where id=#{id} ;
	</update>
	
	<!-- 根据id查询一个 PmphUserMessage -->
	<select  id="getPmphUserMessageById" parameterType="PmphUserMessage"  resultType="PmphUserMessage" >
		select * from pmph_user_message where id=#{id} ;
	</select>
	
</mapper>
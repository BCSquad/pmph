<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.WriterUserMessageDao">

	<!-- 新增 WriterUserMessage -->
    <insert id="addPmphGroup"  parameterType="WriterUserMessage"  useGeneratedKeys="true" keyProperty="id"  >
     	insert  into  writer_user_message  (msg_id,  user_id,is_read,   is_deleted) 
                     	             values(#{msgId},#{userId},#{isRead},#{isDelete}) ;
    </insert>
    
   <!-- 根据id删除一个 WriterUserMessage -->
	<delete id="deletePmphGroupById" parameterType="WriterUserMessage"   >
		delete from  writer_user_message where where id=#{id} ;
	</delete>
	
	<!-- 更新 WriterUserMessage -->
	<update id="updatePmphGroupById"   parameterType="WriterUserMessage"  >
		update writer_user_message 
			set msg_id=#{msgId},  user_id=#{userId},is_read=#{isRead},   is_deleted= #{isDelete} 
		where id=#{id} ;
	</update>
	
	<!-- 根据id查询一个 WriterUserMessage -->
	<select  id="deletePmphGroupById" parameterType="WriterUserMessage"  resultType="WriterUserMessage" >
		select * from writer_user_message where id=#{id} ;
	</select>
	
</mapper>
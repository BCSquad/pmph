<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.TopicWriterDao">
	<sql id="key">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="topicId != null ">
				topic_id,
			</if>
			<if test="realname != null and realname !=''">
				realname,
			</if>
			<if test=" sex != null ">
				sex,
			</if>
			<if test="price != null ">
				price,
			</if>
			<if test="position != null and position !=''">
				position,
			</if>
			<if test=" workplace != null and workplace !=''">
				workplace,
			</if>
		</trim>
	</sql>
	<!-- sql片段对应?,id属性值任意 -->
	<sql id="value">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="topicId != null ">
				#{topicId},
			</if>
			<if test="realname != null and realname !=''">
				#{realname},
			</if>
			<if test=" sex != null ">
				#{sex},
			</if>
			<if test="price != null ">
				#{price},
			</if>
			<if test="position != null and position !=''">
				#{position},
			</if>
			<if test="workplace != null and workplace !=''">
				#{workplace},
			</if>
		</trim>
	</sql>
	<!-- 新增Area -->
	<insert id="add" parameterType="TopicWriter">
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="id"> <!-- order="AFTER"表示先执行插入语句，之后再执行查询语句 BEFORE 或 AFTER -->
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into topic_writer (
		<include refid="key" />
		)
		values(
		<include refid="value" />
		) ;
	</insert>
	<select id="listTopicWriterByTopicId" parameterType="java.lang.Long"
		resultType="TopicWriter">
		SELECT * FROM topic_writer w WHERE w.topic_id = #{topicId};
	</select>
</mapper>
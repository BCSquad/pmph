	<sql id="value">
		<!-- 去掉最后一个, -->
		<trim suffixOverrides=",">
			<if test="parentId != null">
				#{parentId},
			</if>
			<if test="path != null and path !=''" >
				#{path},
			</if>
			<if test="categoryName != null">
				#{categoryName},
			</if>
			<if test="isBackground != null">

			</if>
			<if test="isAuthorVisible != null">
				#{isAuthorVisible},
			</if>
			<if test="isClicksVisible != null">
				#{isClicksVisible},
			</if>
			<if test="isCommentsAllow != null">
				#{isCommentsAllow},
			</if>
			<if test="isCommentsVisible != null">
				#{isCommentsVisible},
			</if>
			<if test="isLikesVisible != null">
				#{isLikesVisible},
			</if>

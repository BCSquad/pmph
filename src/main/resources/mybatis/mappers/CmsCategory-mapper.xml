			<if test="isMaterialNotice != null">
				is_material_notice,
			</if>
			<if test="isSummaryVisible != null">
				is_summary_visible,
			</if>
			<if test="isKeywordVisible != null">
				is_keyword_visible,
			</if>
			<if test="isAuthorVisible != null">

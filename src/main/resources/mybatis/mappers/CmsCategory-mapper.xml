			<if test="permissionId != null">
				#{permissionId},
			</if>
			<if test="isAuthRequired != null">
				#{isAuthRequired},
			</if>
			<if test="authRoleId != null">
				#{authRoleId},
			</if>
			<if test="isMaterialNotice != null">
				#{isMaterialNotice},
			</if>
			<if test="isSummaryVisible != null">

			</if>
			<if test="sortHot != null">
				sort_hot=#{sortHot},
			</if>
			<if test="deadlineHot != null">
				deadline_hot=#{deadlineHot},
			</if>
			<if test="isPromote != null">
				is_promote=#{isPromote},
			</if>
			<if test="sortPromote != null">
				sort_promote=#{sortPromote},
			</if>
			<if test="deadlinePromote != null">

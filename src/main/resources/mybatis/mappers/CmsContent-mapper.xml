			</if>
			<if test="authDate != null">
				auth_date=#{authDate},
			</if>
			<if test="isDeleted != null">
				is_deleted=#{isDeleted},
			</if>
			<if test="gmtReedit != null">
				gmt_reedit=#{gmtReedit},
			</if>
		</set>
		where 
			id=#{id};
	</update>

	<!-- 根据id查询一个CmsContent -->
	<select id="getCmsContentById" parameterType="java.lang.Long" resultType="CmsContent">
		select * from cms_content where id=#{id};
	</select>
	
	<!-- 查询表单的数据总数 -->
	<select id="getCmsContentCount" resultType="java.lang.Integer">
		select
			count(*)
		from
			cms_content
	</select>
	
	<!-- 根据id删除一个 CmsContent-->
	<delete id="deleteCmsContentById" parameterType="java.lang.Long">
		delete from cms_content where id=#{id};
	</delete>
	
	<!-- 批量删除-->
    <delete id="deleteCmsContentByIds" >
    	delete from cms_content
		where 
			id
		in
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
                 #{item}
		</foreach>
    </delete>

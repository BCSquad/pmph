<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bc.pmpheep.back.dao.PmphGroupMessageDao">

	<!-- 新增 PmphGroupMessage -->
    <insert id="addPmphGroupMessage"  parameterType="PmphGroupMessage"  useGeneratedKeys="true" keyProperty="id"  >
        insert  into  pmph_group_message  (group_id,member_id,msg_content)  values(#{groupId},#{memberId},#{msgContent}) ;
    </insert>
    
   <!-- 根据id删除一个 PmphGroupMessage -->
	<delete id="deletePmphGroupMessageById" parameterType="PmphGroupMessage"   >
		delete from  pmph_group_message where where id=#{id} ;
	</delete>
	
	<!-- 更新 PmphGroupMessage -->
	<update id="updatePmphGroupMessageById"   parameterType="PmphGroupMessage"  >
		update pmph_group_message  set  group_id=#{groupId},member_id=#{memberId},msg_content= #{msgContent}   where id=#{id} ;
	</update>
	
	<!-- 根据id查询一个 PmphGroupMessage -->
	<select  id="getPmphGroupMessageById" parameterType="PmphGroupMessage"  resultType="PmphGroupMessage" >
		select * from pmph_group_message where id=#{id} ;
	</select>
	
</mapper>